<%=javascript_include_tag 'jquery-1.3.2.min','jquery-ui-1.7.1.custom.min','execute','jquery','jquery.innerfade'%>
    <%= yield :head %>
  <script type="text/javascript">
	   $(document).ready(
				function(){
					$('#news').innerfade({
						animationtype: 'slide',
						speed: 450,
						timeout: 1000,
						type: 'random',
						containerheight: '1em'
					});
					
					$('ul#portfolio').innerfade({
						speed: 1000,
						timeout: 4000,
						type: 'sequence',
						containerheight: '220px'
					});
					
					$('.fade').innerfade({
						speed: 1000,
						timeout: 5000,
						type: 'random_start',
						containerheight: '1.5em'
					});
					
					$('.adi').innerfade({
						speed: 'slow',
						timeout: 4000,
						type: 'random',
						containerheight: '150px'
					});

			});
  	</script>

</head>	

